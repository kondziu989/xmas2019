<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="buttonWhite">
        <item name="android:background">@drawable/buttonelipse</item>
    </style>

    <style name="background">
        <item name="android:background">@drawable/gradient_selector</item>
    </style>
    <style name="background_calendar">
        <item name="android:background">@drawable/gradient_selector_calendar</item>
    </style>


    <!-- Calendar view -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:focusedMonthDateColor">@color/selectedText</item>
        <item name="android:colorBackground">@color/selectedText</item>
        <item name="colorAccent">@color/selectedText</item>

    </style>

    <style name="CalenderViewDateCustomText">
        <item name="colorPrimary">@color/CalendarWeeksColor</item>
        <item name="android:textColor">@color/CalendarDaysColor</item>

    </style>

    <style name="CalenderViewWeekCustomText">
        <item name="android:textColor">@color/CalendarWeeksColor</item>
    </style>

    <!-- Calendar view -->

    <!-- Calendar popup -->
    <style name="AppTheme.PopupTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:layout_gravity">top</item>

    </style>
</resources>
