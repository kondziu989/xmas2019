<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/menubackground"
        android:theme="@style/AppTheme.NoActionBar">
    <Button
            android:text="Mapa"
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="48dp"
            android:id="@+id/map_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            style="@style/buttonWhite"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Jarmark \n Świąteczny"
            android:layout_width="226dp"
            android:layout_height="114dp"
            android:id="@+id/textView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="36sp" app:layout_constraintHorizontal_bias="0.497"

            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.17000002" android:textAlignment="center"/>
    <Button
            android:text="Wydarzenia"
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="48dp"
            android:id="@+id/events_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/map_btn"
            style="@style/buttonWhite"
    />
    <Button
            android:text="Restauracje"
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="48dp"
            android:id="@+id/restaurants_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/events_btn"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            style="@style/buttonWhite"
    />
    <!--<TextView
            android:text="Media"
            android:layout_width="109dp"
            android:layout_height="26dp"
            android:id="@+id/media_link"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/location_link"
            android:layout_marginEnd="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/restaurants_btn" app:layout_constraintHorizontal_bias="0.296"/>-->
    <TextView
            android:text="Lokalizacja"
            android:layout_width="107dp"
            android:layout_height="26dp"
            android:id="@+id/location_link"
            android:textAlignment="center"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/restaurants_btn"
            android:layout_marginStart="68dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Kontakt"
            android:layout_width="109dp"
            android:layout_height="26dp"
            android:id="@+id/kontakt_link"
            android:textAlignment="center"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/location_link"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/restaurants_btn" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>