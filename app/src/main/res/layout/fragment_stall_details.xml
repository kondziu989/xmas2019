<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".StallDetails">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:src="@android:drawable/btn_star_big_on"
                android:layout_width="0dp"
                android:layout_height="298dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/stall_photo" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
        <TextView
                android:layout_width="171dp"
                android:layout_height="38dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/stall_title" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/stall_photo"
                android:textAppearance="@android:style/TextAppearance.Material.Headline"
                android:textAlignment="center"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="395dp"
                android:layout_height="371dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/stall_title"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" android:id="@+id/tags_container"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>