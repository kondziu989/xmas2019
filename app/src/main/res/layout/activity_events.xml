<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ID_events_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EventsActivity"
        style="@style/background">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="150dp"
    />
    <Button
            android:text="@string/show_all_events"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:id="@+id/ID_showAll"
            style="@style/buttonWhite"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewEvents" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:visibility="visible" android:textAlignment="center" android:textStyle="bold|italic"
            app:layout_constraintHorizontal_bias="0.497"/>
</android.support.constraint.ConstraintLayout>