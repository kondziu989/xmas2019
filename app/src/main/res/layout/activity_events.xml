<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ID_events_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EventsActivity">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp"/>
    <Button
            android:text="@string/show_all_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ID_showAll"
            android:background="@color/colorOfEventsShowAll"
            android:textColor="@color/colorOfMainHeader"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewEvents" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:visibility="gone" android:textAlignment="center" android:textStyle="bold|italic"/>
</android.support.constraint.ConstraintLayout>