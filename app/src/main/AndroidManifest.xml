<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zpi.xmas2019">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".HowToGetActivity"
                android:label="@string/title_activity_how_to_get"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".DriveActivity">
        </activity>
        <activity android:name=".LocationActivity">
        </activity>
        <activity android:name=".ContactActivity">
        </activity>
        <activity android:name=".RestaurantsActivity">
        </activity>
        <activity android:name=".MapActivity">
        </activity>
        <activity android:name=".EventsActivity" android:parentActivityName=".MainActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>